@page "/hisaka"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HISAKA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #fde0e0;
            font-family: 'Segoe UI', sans-serif;
        }
        .navbar {
            background-color: #d45555;
        }
        .navbar-brand {
            font-weight: bold;
            color: white;
            font-size: 1.5rem;
        }
        .search-bar input {
            width: 400px;
            border-radius: 20px;
            padding: 0.5rem 1rem;
        }
        .discount-badge {
            position: absolute;
            top: 5px;
            left: 5px;
            background-color: #ff5722;
            color: white;
            padding: 2px 6px;
            font-size: 12px;
            border-radius: 4px;
        }
        .product-card {
            background: white;
            border-radius: 10px;
            padding: 10px;
            box-shadow: 0 1px 5px rgba(0,0,0,0.1);
            position: relative;
        }
        .footer {
            background-color: #d45555;
            color: white;
            padding: 2rem;
            font-size: 0.9rem;
        }
        .footer a {
            color: white;
            text-decoration: none;
        }
        .footer input {
            border-radius: 20px;
            border: none;
            padding: 5px 10px;
            width: 220px;
        }
        .footer button {
            background-color: #ff9800;
            color: white;
            border: none;
            border-radius: 20px;
            padding: 5px 20px;
            margin-left: 5px;
        }
    </style>
</head>
<body>
    

    <!-- Sản phẩm nổi bật -->
    <div class="container my-4">
        <div class="d-flex justify-content-between">
            <h5 class="text-danger fw-bold">Sản phẩm nổi bật</h5>
            <a href="#" class="text-danger">Xem Tất Cả Sản Phẩm &gt;</a>
        </div>
        <div class="row row-cols-2 row-cols-md-4 row-cols-lg-6 g-3 mt-2">
            @for (int i = 0; i < 6; i++)
            {
                <div class="col">
                    <div class="product-card text-center">
                        <span class="discount-badge">-38%</span>
                        <img src="https://via.placeholder.com/100x150" class="w-100 mb-2" alt="sp">
                        <div class="fw-bold text-dark">288.000₫</div>
                        <div style="font-size: 0.8rem;">La Roche-Posay</div>
                        <div style="font-size: 0.75rem; color: gray;">Kem Dưỡng...</div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Sản phẩm bán chạy -->
    <div class="container my-5">
        <h5 class="text-danger">Sản Phẩm Bán chạy</h5>
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-6 g-3 mt-2">
            @for (int i = 0; i < 6; i++)
            {
                <div class="col">
                    <div class="product-card text-center">
                        <img src="https://via.placeholder.com/100x150" class="w-100 mb-2" alt="hot">
                        <div class="fw-bold">Sản phẩm #@i</div>
                        <div style="font-size: 0.8rem; color: gray;">Chi tiết mô tả</div>
                    </div>
                </div>
            }
        </div>
    </div>

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
